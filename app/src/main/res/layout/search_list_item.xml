<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="15dp"
    android:background="@drawable/search_list_background">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/product_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,1:1"
        tools:background="@drawable/sample_product"
        android:scaleType="centerCrop"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/product_image"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@id/product_image"
        android:layout_marginStart="15dp"
        android:textAppearance="@style/bold_title_text_appearance"
        tools:text="Maybelline Face Studio Master Hi-Light Light Booster Bronzer"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/brand_name_header"
        app:layout_constraintStart_toStartOf="@id/product_name"
        android:text="@string/brand"
        android:textColor="@color/semidark_gray"
        app:layout_constraintTop_toBottomOf="@id/product_name"
        android:fontFamily="@font/raleway_medium"
        android:textSize="10sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/brand_name"
        app:layout_constraintStart_toEndOf="@id/brand_name_header"
        android:layout_marginStart="5dp"
        tools:text="Maybelline"
        android:textColor="?attr/colorOnPrimary"
        app:layout_constraintTop_toBottomOf="@id/product_name"
        android:fontFamily="@font/raleway_medium"
        android:textSize="10sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rating_header"
        app:layout_constraintStart_toStartOf="@id/product_name"
        android:text="@string/rating"
        android:textColor="@color/semidark_gray"
        app:layout_constraintTop_toBottomOf="@id/brand_name_header"
        android:fontFamily="@font/raleway_medium"
        android:textSize="10sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rating"
        app:layout_constraintStart_toEndOf="@id/rating_header"
        android:layout_marginStart="5dp"
        tools:text="5.0"
        android:textColor="?attr/colorOnPrimary"
        app:layout_constraintTop_toBottomOf="@id/brand_name"
        android:fontFamily="@font/raleway_medium"
        android:textSize="10sp"/>
    <TextView
        android:fontFamily="@font/raleway_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currency_icon"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/product_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAppearance="@style/bold_title_text_appearance"
        android:text="@string/currency_symbol"
        android:layout_marginEnd="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price"
        android:textSize="20sp"
        android:fontFamily="@font/raleway_medium"
        app:layout_constraintTop_toTopOf="@id/product_name"
        android:textAppearance="@style/bold_title_text_appearance"
        app:layout_constraintEnd_toStartOf="@id/currency_icon"
        tools:text="14.99"
        android:layout_marginEnd="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>